<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/unameid1"
        android:layout_width="162dp"
        android:layout_height="26dp"
        android:layout_marginStart="40dp"

        android:layout_marginTop="20dp"
        android:text="Profile: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="left"

        />

    <!-- card 2 -->
    <androidx.cardview.widget.CardView

        android:layout_width="300sp"
        android:layout_height="230sp"
        card_view:cardCornerRadius="30sp"
        card_view:cardElevation="8sp"
        android:background="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24sp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/result2"
                android:layout_gravity="top|center_horizontal"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice Interview"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20sp"
               android:id="@+id/interview"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <!-- card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="230sp"
            card_view:cardCornerRadius="30sp"
            card_view:cardElevation="8sp"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24sp" >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/prep"
                    android:layout_gravity="top|center_horizontal"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Yourself"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20sp"
                    android:id="@+id/prep"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="230sp"
            card_view:cardCornerRadius="30sp"
            card_view:cardElevation="8sp"
            android:background="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24sp" >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/prep"
                    android:layout_gravity="top|center_horizontal"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interview Schedule"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20sp"
                    android:id="@+id/todo"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>